{
  "suggest.enablePreview": true,
  "suggest.echodocSupport": true,
  "diagnostic.enable": true,
  "diagnostic.displayByAle": false,
  "coc.preferences.colorSupport": true,
  "diagnostic.enableSign": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.virtualText": false,
  "diagnostic.enableHighlightLineNumber": false,
  "diagnostic.messageTarget": "float",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"],
      "initializationOptions": {
        "bashIde.explainshellEndpoint": "http://localhost:5000"
      }
    },
    "cquery": {
      "command": "cquery",
      "args": ["--log-file=/tmp/cq.log"],
      "filetypes": ["c", "cpp"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "julia": {
      "command": "julia",
      "args" : ["--startup-file=no", "--history-file=no", "-e", "using LanguageServer; using Pkg; import StaticLint; import SymbolServer; env_path = dirname(Pkg.Types.Context().env.project_file); debug = false; server = LanguageServer.LanguageServerInstance(stdin, stdout, debug, env_path, \"\", Dict()); server.runlinter = true; run(server);" ],
      "filetypes": ["julia"]
     }
  },
    "python.jediEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.jediPath": "~/venvs/base/lib/python3.7/site-packages/",
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".direnv",
        "venvs"
    ],
    "python.linting.pylintArgs": ["--disable=C"],
    "python.linting.flake8Args": ["--ignore=E221,E241,E201"],
    "suggest.timeout": 5000,
    "latex.build.onSave": true,
    "latex.forwardSearch.executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
    "latex.forwardSearch.args": ["%l", "%p", "%f"],
    "latex.build.args": [
        "-pdf",
        "-interaction=nonstopmode",
        "-synctex=1"
    ]
}
